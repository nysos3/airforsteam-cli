{
  "name": "airforsteam",
  "version": "1.0.0",
  "description": "An unofficial Air-for-Steam CLI with interactive configuration and updating of the Air-for-Steam skin",
  "homepage": "https://github.com/nysos3/airforsteam-cli",
  "bugs": {
    "url": "https://github.com/nysos3/airforsteam-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nysos3/airforsteam-cli.git"
  },
  "license": "CC-BY-NC-4.0",
  "author": {
    "name": "Cody Carrell",
    "email": "nysos3@gmail.com",
    "url": "https://github.com/nysos3"
  },
  "files": [
    "bin",
    "lib",
    "lib-es5"
  ],
  "main": "index.js",
  "scripts": {
    "commit": "standard-commit",
    "commitlint": "standard-commitlint",
    "lint": "npx eslint --ext .js --ignore-path .gitignore .",
    "lint:fix": "npx eslint --ext .js --ignore-path .gitignore . --fix",
    "prepublishOnly": "npm run transpile",
    "test": "echo \"Error: no test specified\" && exit 1",
    "transpile": "babel lib --out-dir lib-es5",
    "watch": "babel lib --out-dir lib-es5 --watch"
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .js --ignore-path .gitignore . --fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-runtime": "^6.26.0",
    "callsite-record": "^4.1.3",
    "chalk": "^2.4.2",
    "etl": "^0.5.19",
    "execa": "^1.0.0",
    "font-manager": "^0.3.0",
    "fs-extra": "^7.0.1",
    "inquirer": "^6.2.2",
    "meow": "^5.0.0",
    "node-emoji": "^1.10.0",
    "ora": "^3.1.0",
    "platform-folders": "^0.3.2",
    "unzipper": "^0.9.11",
    "update-notifier": "^2.5.0",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "@clickagy/eslint-config": "^1.0.3",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.14.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-multiplexer": "^1.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lint-staged": "^8.1.4",
    "npm-check": "^5.9.0",
    "standard-commit": "^1.5.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npx sort-package-json && npx lint-staged && (bash ./hooks/pre-commit.sh || exit 0)",
    "post-merge": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet 'package-lock.json' && npm install || exit 0",
    "commit-msg": "standard-commithook"
  },
  "standard-commit": {
    "types": [
      "build",
      "chore",
      "ci",
      "docs",
      "feat",
      "fix",
      "perf",
      "refactor",
      "revert",
      "style",
      "test"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  }
}
